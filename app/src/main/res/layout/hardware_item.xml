<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/fotoProduto"
        android:layout_width="134dp"
        android:layout_height="132dp"
        android:src="@drawable/cebollaproduc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cebolla cabezona"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/fotoProduto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/descripcionProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KKKKKKKKKKKKKKKKasdasdasdasdasdasdasdasdasd"
        android:textSize="16sp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@id/nombreProducto"
        app:layout_constraintStart_toEndOf="@id/fotoProduto"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/precioProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="$800Lib"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/fotoProduto"
        app:layout_constraintTop_toBottomOf="@id/descripcionProducto" />

    <TextView
        android:id="@+id/categoriaProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="frutas"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fotoProduto" />

    <TextView
        android:id="@+id/vendedorProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="4dp"
        android:text="Carlos"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@id/fotoProduto"
        app:layout_constraintTop_toBottomOf="@+id/descripcionProducto" />

    <TextView
        android:id="@+id/promediopuntuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/estrella_amarilla"
        android:layout_marginStart="200dp"
        android:layout_marginTop="4dp"
        android:text="0.0"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@id/fotoProduto"
        app:layout_constraintTop_toBottomOf="@+id/descripcionProducto" />


</androidx.constraintlayout.widget.ConstraintLayout>